					success : function(result){
						$('#district').empty();
						console.log('Thông tin của các huyện lấy về được');
						$.each(result.bla, function (i, item) {
							$('#district').append($('<option>', { 
								value: item,
								text : item
							}));
						});
					}
				})
			})
			
		</script>
