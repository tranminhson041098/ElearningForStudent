<form action="/admin/login" method="post">
  <div class="imgcontainer">
    <img src="https://thumbs.dreamstime.com/z/e-learning-logo-vector-concept-online-center-graduation-illustration-flat-design-abstract-background-education-97659237.jpg" alt="Avatar" class="avatar" style="max-width: 100px; max-height: 100px;">
  </div>
  <h3>TRANG ĐĂNG NHẬP CỦA QUẢN TRỊ VIÊN</h3>
  <div class="container2">
    <label for="uname"><b>Tài khoản đăng nhập</b></label>
    <input type="text" placeholder="Nhập tài khoản email" name="email" pattern="[[a-z]-@-.-[a-z]]" required>

    <label for="psw"><b>Mật khẩu</b></label>
    <input type="password" placeholder="Nhập mật khẩu" name="password" minlength="5" required>

    <button style="max-width: 200px;" type="submit">Đăng nhập</button>
    
  </div>

  <div class="container2" style="background-color:#f1f1f1">
    
    <span class="psw">Quên <a href="/forgot-password">mật khẩu ?</a></span>
  </div>
</form>
