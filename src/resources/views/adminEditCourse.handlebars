    <script>
        $('#phumaTakeda').click(function(event){
          //Lấy được id của khóa học -- actually class
            
            if(event.target.name=='delete'){
              
                  var classId = $(event.target).closest('tr').attr('id');
                  console.log('check thông tin classId');
                  console.log(classId);
                  $('#hideIdQuestionSecond').val(classId);
                  $('#modalDeleteQuestion').modal();
            }
        })
        /*Xác nhận muốn xóa khóa học*/
          $('#btnSubmitDelete').click(function(){
            
              let classId = $('#hideIdQuestionSecond').val();
              console.log("Thông tin của class Id là :");
              console.log(classId);
              
              let courseId =  $('#clgt').html();
              console.log('Thông tin courseId')
              console.log(courseId);
              $.ajax({
                  url:`http://localhost:3000/admin/manage-class/delete/${classId}`,
                  type:'post',
                  data:{
                    courseId:courseId
                  },
                  success : function(data)
                  {
                    console.log(data.bla);
                         $('#phumaTakeda').empty();
                          let infoData = data.bla;
                          console.log(infoData);
                        for(let j = 0 ; j<infoData.length; j++){
                          let stt = j+1;
                          let id = infoData[j].id;
                          let className = infoData[j].className;
                          let classStatus = infoData[j].classStatus;
                          let stringInfo ="";
                          stringInfo += `<tr id='${id}'>`;
                          stringInfo += `<th>${stt}</th><td id='blabla'>${id}</td><th>${className}</th>`;
                          //Nút bài tập
                          stringInfo += `<td style="color: blue;">${classStatus}</td>`;

                          
                          stringInfo += `<td><a href='/admin/viewDocument?courseId=${id}'>Link</a></td>`;
                          stringInfo += "<td>Admin</td>";
                          stringInfo += "<td style='display: flex;'>";
                          //Nút sửa tiết học
                          stringInfo +="<button onclick='location.href=`/admin/manage-class/edit/${id}`' type='button' class='btn btn-warning'>Sửa</button>&nbsp;";
                          stringInfo += "<input name='delete' id='btnDeleteQuestion' type='button' class='btn btn-danger' value='Xóa khóa học'></input>";
                          stringInfo +="</td>";
                          stringInfo +="</tr>";
                          $('#phumaTakeda').append(stringInfo);
                        }
                  }
              })
                $('#modalDeleteQuestion').modal('hide');
                alert('Bạn đã xóa khóa học thành công');
          })
    </script>
